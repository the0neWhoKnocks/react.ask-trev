$namespace = ".login";

{$namespace} {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  
  label {
    color: #eee;
    padding: 0.3em 0.5em 0 0.5em;
    background: #666;
    display: block;
    
    &:not(:nth-child(1)){
      margin-top: 0.5em;
    }
  }
  
  input {
    width: 100%;
    padding: 0.5em;
    border: solid 2px #666;
    display: block;
  }
  
  &__overlay {
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.5);
  }
  
  &__msg {
    white-space: pre-line;
    padding: 0.5em;
    border: solid 2px;
    border-radius: 0.25em;
    margin-top: 0.5em;
    display: none;
    
    &.is--error {
      color: #800000;
      background: #ffb3b3;
      display: block;
    }
  }
  
  &__form {
    width: 350px;
    padding: 1em;
    border: solid 1px #666;
    border-radius: 0.25em;
    background: #eee;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  
  &__btn {
    width: 100%;
    margin-top: 0.5em;
  }

  &.is--initializing {
    visibility: hidden;

    &::after {
      content: '[ Initializing ]';
      color: #eee;
      padding: 0.75em 1em;
      border-radius: 0.25em;
      background: rgba(0,0,0,0.5);
      visibility: visible;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
  }
}