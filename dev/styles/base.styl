@import '_normalize.styl'

html,
body,
.app,
.shell {
  width: 100%;
  height: 100%;
}

.shell {
  position: relative;
}

.overlay {
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 100;
  display: none;
  
  &.is--processing {
    display: block;
    animation: 1s fadeIn;
    
    &::after {
      content: '[ Processing ]';
      color: #fff;
      font-size: 1.2em;
      padding: 1em;
      border-radius: 0.5em;
      border: solid 2px;
      background: #000;
      transform: translate(-50%, -50%);
      position: absolute;
      top: 50%;
      left: 50%;
    }
  }
}

@keyframes fadeIn {
  0%,
  50% {
    opacity: 0;
  }
  
  100% {
    opacity: 100;
  }
}