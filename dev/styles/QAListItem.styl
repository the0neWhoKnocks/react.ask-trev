$namespace = ".qa-list-item";
$col_errorPrime = #f9c6d3;
$col_errorSecond = #8c0c0c;

{$namespace} {
  width: 100%;
  outline: solid 1px #ddd;
  display: table;
  
  &:not(:nth-child(1)) {  
    margin-top: 1em;
  }
  
  &__container,
  &__nav {
    display: table-cell;
    vertical-align: top;
  }
  
  &__container {
    min-width: 300px;
    padding: 1em;
  }
  
  &__nav {
    width: 7.5em;
    background: #ddd;
    
    &-btn {
      width: 100%;
      text-transform: uppercase;
      padding: 0.5em 1.5em;
      border: solid 1px transparent;
      border-bottom: solid 1px #fff;
      background: transparent;
      display: block;
    }
  }
  
  &__title,
  &__body {
    width: 100%;
    padding: 0.25em 0.5em;
    display: block;
    
    &.is--readonly {
      resize: none;
      overflow: hidden;
      border: none;
      padding: 0;
    }
  }
  
  &__title {
    font-weight: bold;
    font-size: 1.25em;
    height: 1.25em;
    margin-top: 0;
  }
  
  &__body {
    margin-top: 1em;
  }
  
  &__error {
    color: $col_errorSecond;
    font-weight: bold;
    padding: 0.5em;
    margin-top: 1em;
    background: $col_errorPrime;
    display: none;
    
    &.has--error {
      display: block;
    }
  }
}

{$namespace}--is--invalid {
  outline-color: $col_errorSecond;
  animation: shake .5s linear;
}

@keyframes shake {
  8%, 41% {
    transform: translateX(-10px);
  }
  25%, 58% {
    transform: translateX(10px);
  }
  75% {
    transform: translateX(-5px);
  }
  92% {
    transform: translateX(5px);
  }
  0%, 100% {
    transform: translateX(0);
  }
}