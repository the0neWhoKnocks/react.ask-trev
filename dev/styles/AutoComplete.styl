$namespace = '.autocomplete';

{$namespace} {
  *, :before, :after {
    box-sizing: border-box;
  }

  &__container {
    position: relative;
  }

  &__input {
    font-size: 1em;
    width: 100%;
    padding: 0.5em 1em;
  }

  &__list {
    min-width: 100%;
    max-height: 75vh;
    overflow-y: auto;
    list-style: none;
    padding: 0;
    border: solid 1px #ddd;
    margin: 0;
    background-color: #fff;
    display: none;
    position: absolute;
    top: 100%;
    left: 0;

    &-item {
      color: #000;
      font-size: inherit;
      width: 100%;
      text-decoration: none;
      text-align: left;
      padding: 0;
      border: none;
      background: transparent;
      cursor: pointer;

      &-btn {
        width: 100%;
        text-align: left;
        padding: 0.5em 1em;
        border: none;
        background: transparent;

        &:focus {
          background: #ddd;
        }
      }
    }

    &.has--items {
      display: block;
    }
  }
}